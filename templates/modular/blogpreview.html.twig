{% set grid_size = theme_var('grid-size') %}

<section id="modular-text" class="section {{ page.header.class}} bg-gray">
    <section class="container {{ grid_size }}">
        <div class="columns">
            <div class="column col-6 col-md-12">
                {{ content }}
            </div>
            <div class="column col-6 col-md-12">

                <div class="card">
                    {% set image = page.media.images|first %}
                    {% if image %}
                    <div class="card-image">
                        <a href=/blog/was-kraucht-und-fleucht-um-haus-und-hof-teil-5>{{ image.cropZoom(800,400).html }} </a>
                    </div>
                    {% endif %}
                    <div class="card-header">
                        <div class="card-subtitle text-gray">
                            {% include 'partials/blog/date.html.twig' %}
                    </div>
                        <div class="card-title">
                        <a href=/blog/was-kraucht-und-fleucht-um-haus-und-hof-teil-5><h5> Was kräucht und fleucht um Haus und Hof? - Teil 5 </h5></a>
                        </div>
                    </div>
                    <div class="card-body">
                        Vorbemerkungen (je ein Zitat aus den vier vorangegangenen Beiträgen zur „Haus- und Hofkäferfauna“ 2013 bis 2016):

                        „…Ende 2...
                    </div>
                    <div class="card-footer">
                        {% include 'partials/blog/taxonomy.html.twig' %}
                    </div>
                </div>

            </div>
        </div>
    </section>
</section>
